<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns:if="Wt.WTemplate.conditions">
  <!-- The nutpp.auth templates are based on those provided by Wt:
       wt-4.0.2/src/xml/bootstrap*_theme.xml -->

  <message id="nutpp.form.field">
    <![CDATA[
    <div class="form-group">
      <label for="${id:{1}}" class="control-label col-sm-4">{2}</label>
      <div class="col-sm-6">${{1}}<span class="help-block">{3} {4}</span></div>
    </div>
    ]]>
  </message>

  <message id="nutpp.form.checkbox">
    <![CDATA[
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-6">
        <div class="checkbox"><label>${{1}} {2}</label></div>
        <span class="help-block">{3}</span>
      </div>
    </div>
    ]]>
  </message>

  <message id="nutpp.mvc.field">
    <![CDATA[
    ${<if:{1}>}
        ${block:nutpp.form.field {1} '${tr:{2}.{1}}' '${{1}-info}' ''}
    ${</if:{1}>}
    ]]>
  </message>

  <message id="nutpp.mvc.field2">
    <![CDATA[
    ${<if:{1}>}
        ${block:nutpp.form.field {1} '${tr:{2}.{1}}' '${{1}-info}' '{3}'}
    ${</if:{1}>}
    ]]>
  </message>

  <message id="nutpp.mvc.checkbox">
    <![CDATA[
    ${<if:{1}>}
        ${block:nutpp.form.checkbox {1} '${tr:{2}.{1}}' '${{1}-info}'}
    ${</if:{1}>}
    ]]>
  </message>

  <message id="Wt.Auth.template.login">
    <div class="col-sm-offset-2 col-sm-8 Wt-auth-login">
      <legend>${tr:Wt.Auth.login-form-title}</legend>
      <p>${tr:Wt.Auth.login-form-info}</p>
      <div class="form-horizontal">
        ${<if:passwords>}
          ${block:nutpp.mvc.field user-name Wt.Auth}
          ${block:nutpp.mvc.field password Wt.Auth}
          ${block:nutpp.mvc.checkbox remember-me Wt.Auth}
        ${</if:passwords>}
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="form-group">
              <div class="col-sm-offset-4 col-sm-6">
                ${login class="btn-primary"}
                ${<if:oauth>}${icons class="btn"}${</if:oauth>}
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-4 col-sm-6">
                ${lost-password class="btn-link"} ${sep} ${register class="btn-link"}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </message>

  <!-- Extends Wt.Auth.template.registration. -->
  <message id="nutpp.auth.template.registration">
    <div class="Wt-auth-registration">
      <p class="lead">
        ${password-description}
      </p>
      <div class="form-horizontal">
        ${block:nutpp.mvc.field2 user-name Wt.Auth '${confirm-is-you class="btn-link"}'}
        ${block:nutpp.mvc.field choose-password Wt.Auth}
        ${block:nutpp.mvc.field repeat-password Wt.Auth}
        ${block:nutpp.mvc.field email Wt.Auth}
        ${block:nutpp.mvc.field language nutpp.auth}
        ${<if:oauth>}
          <p class="lead">
            ${oauth-description}
          </p>
          <div class="form-group">
            <label class="control-label col-sm-4">${tr:Wt.Auth.oauth}</label>
            <div class="col-sm-6">${icons}</div>
          </div>
        ${</if:oauth>}
        <div class="modal-footer">
          ${ok-button class="btn-primary"} ${cancel-button}
        </div>
      </div>
    </div>
  </message>

  <message id="Wt.Auth.template.update-password">
    <div class="Wt-auth-update-password">
      <div class="form-horizontal">
        ${block:nutpp.mvc.field user-name Wt.Auth}
        ${block:nutpp.mvc.field password Wt.Auth}
        ${block:nutpp.mvc.field choose-password Wt.Auth}
        ${block:nutpp.mvc.field repeat-password Wt.Auth}
        <div class="modal-footer">
          ${ok-button class="btn-primary"} ${cancel-button}
        </div>
      </div>
    </div>
  </message>

  <message id="Wt.Auth.template.lost-password">
    <div class="Wt-auth-lost-password">
      <div class="form-horizontal">
        ${block:nutpp.form.field email "${tr:Wt.Auth.email}"
            "${tr:Wt.Auth.email-info}" ""}
        <div class="modal-footer">
          ${send-button class="btn-primary"} ${cancel-button}
        </div>
      </div>
    </div>
  </message>

  <message id="Wt.Auth.template.password-prompt">
    <div class="Wt-auth-password-prompt">
      <div class="form-horizontal">
        ${block:nutpp.mvc.field user-name Wt.Auth}
        ${block:nutpp.mvc.field password Wt.Auth}
        <div class="modal-footer">
          ${ok-button class="btn-primary"} ${cancel-button}
        </div>
      </div>
    </div>
  </message>

  <!-- Replaces Wt.Auth.template.logged-in. -->
  <message id="nutpp.auth.template.logged-in">
    <div class="nutpp-auth-logged-in">
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-4 profile-pic">${user-profile-pic}</div>
          <div class="col-sm-8 profile-info">
            <div><b>${user-name}</b></div>
            <div>${user-email}</div>
            ${edit-account-button class="edit-acc"}
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-sm-4">${add-account-button}</div>
          <div class="col-sm-8">${logout-button class="btn-primary"}</div>
        </div>
      </div>
    </div>
  </message>

  <message id="Wt.WNavigationBar.template">
    <div>
      ${collapse-button}
      <div class="navbar-header">
        ${expand-button}
        ${title-link}
      </div>
      ${contents}
    </div>
  </message>

  <!-- Form to add a new patient or edit an existing one. -->
  <message id="nutpp.ws.template.edit-patient">
    <div class="nutpp-edit-patient">
      <div class="form-horizontal">
        ${block:nutpp.mvc.field name nutpp.patient}
        ${block:nutpp.mvc.field email nutpp.patient}
        ${block:nutpp.mvc.field birth-date nutpp.patient}
        ${block:nutpp.mvc.field gender nutpp.patient}
        ${block:nutpp.mvc.field phone nutpp.patient}
        ${block:nutpp.mvc.field note nutpp.patient}
        <div class="modal-footer">
          ${save-button class="btn-primary"} ${cancel-button}
        </div>
      </div>
    </div>
  </message>

  <!-- Listing for existing patients. -->
  <message id="nutpp.ws.template.list-patient">
    <div class="nutpp-list-patient">
      <div class="row">
        <div class="col-sm-4">${add-pacient-button class="btn-primary"}</div>
        <div class="col-sm-8">${nav-bar}</div>
      </div>
      <div class="row">
      </div>
      <div class="row">
        <div class="col-sm-12">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>${tr:nutpp.patient.name}</th>
                <th>${tr:nutpp.patient.email}</th>
                <th>${tr:nutpp.patient.phone}</th>
                <th>${tr:nutpp.patient.last-activity}</th>
                <th style="width: 80px">${tr:nutpp.patient.actions}</th>
              </tr>
            </thead>
            <tbody>${contents}</tbody>
          </table>
        </div>
      </div>
    </div>
  </message>

  <!-- An item in the patients list. -->
  <message id="nutpp.ws.template.list-patient-item">
    <tr>
      <th scope="row">${index}</th>
      <td><a role="button">${name}</a></td>
      <td>${email}</td>
      <td>${phone}</td>
      <td>${last_activity}</td>
      <td>
        <span role="button" title="${tr:nutpp.patient.view}" aria-label="${tr:nutpp.patient.view}">${view-button}</span>
        <span role="button" title="${tr:nutpp.patient.edit}" aria-label="${tr:nutpp.patient.edit}">${edit-button}</span>
        <span role="button" title="${tr:nutpp.patient.delete}" aria-label="${tr:nutpp.patient.delete}">${delete-button}</span>
      </td>
    </tr>
  </message>
</messages>
